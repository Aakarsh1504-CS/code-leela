<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div id="main">
        <div id="nav2">
            <h1><a style="text-decoration: none; color: black;" href="/profile">CodeLeela</a></h1>
            <div id="btns">
                <a href="/myposts">My Posts</a>
                <a href="/">LogOut</a>
            </div>
        </div>
        <div id="container">
            <form action="/create" method="post" enctype="multipart/form-data">
                <div id="flex">
                    <label for="img">Post Image:</label>
                    <input type="file" name="img" required accept=".jpg, .jpeg, .png, .pdf"  id="img">
                </div>
                <textarea name="caption" placeholder="Write A Caption For Your Post...." id="caption" style="resize: none; width: 80%;height: 80px;margin-top: 20px;"></textarea>
                <br>
                <input type="submit" id="create" value="Create">
            </form>
        </div>
    </div>
    <script>
        document.getElementById('img').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const validTypes = ['image/jpeg', 'image/png', 'image/jpg'];
                if (!validTypes.includes(file.type)) {
                    alert('Invalid file type. Only JPEG, JPG, and PNG are allowed!');
                    event.target.value = ''; // Clear the file input
                }
            }
        });
    </script>
    <script src="/javascripts/script.js"></script>
</body>
</html>
